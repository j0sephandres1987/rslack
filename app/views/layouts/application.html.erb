<!DOCTYPE html>
<html>
  <head>
    <title>Rslack</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <% if @chat_room %>
      <div class="ui menu">
        <div class="right item">
          <%= link_to  raw("<i class='ui icon add square'></i>")+"Create team", teams_create_path %>
        </div>
      </div>
    <% end %>
    <div class="ui grid">
      <div class="three wide column">
        <% if @chat_room %>
          <div class="ui sidebar inverted visible vertical menu red">
            <div class="ui inline dropdown">
              <div class="text">
                <img class="ui avatar image" src="/images/avatar/small/jenny.jpg">
                Jenny Hess
              </div>
              <i class="dropdown icon"></i>
              <div class="menu inverted fluid">
                <div class="item">
                  <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "inverted" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="twelve wide column">
        <%= yield %>
      </div>
      <div class="one wide column">
      </div>
    </div>
  </body>
</html>
